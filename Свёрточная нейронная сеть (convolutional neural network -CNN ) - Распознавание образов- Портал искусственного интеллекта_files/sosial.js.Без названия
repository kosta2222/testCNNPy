            ur= encodeURIComponent(document.location.href+"&iok");
            
          // var urlok=("http://www.odnoklassniki.ru?st.cmd=addShare&st.s=1&st._surl="+ur);
            var urlok="https://connect.ok.ru/dk?st.cmd=WidgetSharePreview&st.shareUrl="+ur;
           document.getElementById('ok_btn').href=urlok;
               // проверяем был ли уже клик по кнопке
