 var click = false;
 $('#tw_btn').click(function(){
            
             desc= encodeURIComponent($('.gallery h3').text()); 
            img= encodeURIComponent($('meta[property="share_image"]').attr('content'));
            ur= encodeURIComponent(document.location.href);
            
           var urlt="http://twitter.com/share?url="+ur+"&text="+desc;
           document.getElementById('tw_btn').href=urlt;
               // проверяем был ли уже клик по кнопке
        /*       if(!click){
                   var social_box = $(this).parent('li');
                   // увеличиваем значение счетчика социалки на 1
                   var count = parseInt($('span', social_box).text());
                   if(!isNaN(count)){
                       count = count + 1;
                       $('span', social_box).text(count);
                   }
                   // увеличиваем общий рейтинг на 1
                   var total_cnt = parseInt($('#total_count').text());
                   if(!isNaN(total_cnt)){
                       total_cnt = total_cnt + 1;
                       $('#total_count').text(total_cnt);
                   }
                   click = true;
               }*/
               // открываем окно
               window.open($(this).attr("href"),'displayWindow', 
               'width=700,height=400,left=200,top=100,location=no, directories=no,status=no,toolbar=no,menubar=no');
                return false;
           });
 
 
 
   

